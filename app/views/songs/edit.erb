<h1>Update a song</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="name" placeholder="<%= @song.name %>" id="Name"><br>
  <input type="text" name="artist_name" placeholder="<%= @song.artist.name %>"><br>
  <% @genres.each do |g| %>
  <input type="checkbox" name="genres[]" value="<%= g.id %>" id="<%= g.name %>" <%='checked' if @song.genres.include?(g) %>><%= g.name %></input>
  <% end %><br>
  <input type="submit" value="Create Song">
</form>
